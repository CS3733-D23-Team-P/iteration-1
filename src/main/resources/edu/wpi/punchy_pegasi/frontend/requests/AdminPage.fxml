<BorderPane style="-fx-background-color: #f1f1f1;" xmlns="http://javafx.com/javafx/"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="edu.wpi.punchy_pegasi.frontend.controllers.requests.AdminPageController">
    <center>
        <HBox alignment="CENTER" BorderPane.alignment="CENTER">
            <children>
                <VBox alignment="CENTER" maxHeight="500.0"
                      style="-fx-background-color: #012D5A; -fx-background-radius: 6;">
                    <children>
                        <VBox alignment="CENTER" VBox.vgrow="ALWAYS">
                            <children>
                                <VBox alignment="CENTER" spacing="25.0" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                                    <Label text="Select A Table Type" VBox.vgrow="ALWAYS"
                                           style="-fx-text-fill:#f1f1f1;">
                                        <font>
                                            <Font size="15.0"/>
                                        </font>
                                    </Label>
                                    <MFXComboBox fx:id="tableTypesComboBox" alignment="CENTER" HBox.hgrow="ALWAYS"
                                                 VBox.vgrow="ALWAYS"/>
                                </VBox>
                                <Label fx:id="fileText" alignment="CENTER" VBox.vgrow="ALWAYS"/>
                            </children>
                            <VBox.margin>
                                <Insets top="50.0"/>
                            </VBox.margin>
                        </VBox>
                        <HBox alignment="CENTER" spacing="50.0" VBox.vgrow="ALWAYS">
                            <children>
                                <Button fx:id="importButton" text="Import"
                                        style="-fx-background-color: green; -fx-background-radius: 6; -fx-text-fill: white"/>
                                <Button fx:id="exportButton" text="Export"
                                        style="-fx-background-color: green; -fx-background-radius: 6; -fx-text-fill: white"/>
                            </children>
                            <VBox.margin>
                                <Insets top="10.0"/>
                            </VBox.margin>
                        </HBox>
                        <HBox alignment="CENTER" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS" spacing="25.0">
                            <children>
                                <MFXTextField fx:id="servSearchBar" floatMode="ABOVE" minWidth="200.0"
                                              onKeyPressed="#showReq" HBox.hgrow="ALWAYS"
                                              promptText="Search for service requests..."/>
                                <Button fx:id="submit" onAction="#showReq"
                                        style="-fx-background-color: green; -fx-background-radius: 6; -fx-text-fill: white"
                                        text="Submit"/>
                            </children>
                            <padding>
                                <Insets left="10.0"/>
                            </padding>
                        </HBox>
                        <VBox alignment="CENTER" VBox.vgrow="ALWAYS">
                            <VBox.margin>
                                <Insets bottom="25.0" left="25.0" right="25.0"/>
                            </VBox.margin>
                            <HBox alignment="CENTER" spacing="10.0" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                                <MFXComboBox fx:id="displayTableTypeComboBox" promptText="Select Table Type"
                                             style="-fx-alignment: center; -fx-font-size: 16;"/>
                                <Button fx:id="displayButton"
                                        style="-fx-background-color: green; -fx-background-radius: 6; -fx-text-fill: white"
                                        text="Display"/>
                            </HBox>
                        </VBox>
                    </children>
                </VBox>
