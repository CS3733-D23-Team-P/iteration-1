<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import org.controlsfx.control.CheckComboBox?>

<BorderPane style="-fx-background-color: #f1f1f1;" xmlns="http://javafx.com/javafx/" xmlns:fx="http://javafx.com/fxml/1">
    <center>
        <VBox spacing="30.0">
            <children>
                <VBox alignment="CENTER" style="-fx-background-color: #D9D9D9; -fx-background-radius: 6;" VBox.vgrow="ALWAYS">
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                    <children>
                        <Label text="Furniture Delivery Request">
                            <font>
                                <Font size="36.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>
                <VBox style="-fx-background-color: #D9D9D9; -fx-background-radius: 6;" VBox.vgrow="ALWAYS">
                    <children>
                        <Label text="Select Furniture">
                            <font>
                                <Font size="24.0" />
                            </font>
                            <VBox.margin>
                                <Insets left="10.0" />
                            </VBox.margin>
                        </Label>
                        <VBox alignment="CENTER" prefHeight="156.0" prefWidth="419.0" style="-fx-background-color: #ffffff; -fx-background-radius: 6;" VBox.vgrow="ALWAYS">
                            <children>
                                <CheckComboBox fx:id="selectFurniture" prefHeight="53.0" prefWidth="350.0" style="-fx-background-color: #ffffff; -fx-border-color: #ffffff;" />
                            </children>
                        </VBox>
                    </children>
                </VBox>
            </children>
            <BorderPane.margin>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </BorderPane.margin>
        </VBox>
    </center>
</BorderPane>
