<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.MFXComboBox?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<BorderPane style="-fx-background-color: #f1f1f1;" xmlns="http://javafx.com/javafx/19"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="edu.wpi.punchy_pegasi.frontend.controllers.FoodServiceRequestController">
    <center>
        <VBox spacing="30.0">
            <children>
                <VBox alignment="CENTER" style="-fx-background-color: #D9D9D9; -fx-background-radius: 6;"
                      VBox.vgrow="ALWAYS">
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                    <children>
                        <Label text="Meal Service Request">
                            <font>
                                <Font size="36.0"/>
                            </font>
                        </Label>
                    </children>
                </VBox>
                <VBox style="-fx-background-color: #D9D9D9; -fx-background-radius: 6;" VBox.vgrow="ALWAYS">
                    <children>
                        <Label text="1.) Select From Available Meals">
                            <font>
                                <Font size="24.0"/>
                            </font>
                            <VBox.margin>
                                <Insets left="10.0"/>
                            </VBox.margin>
                        </Label>
                        <VBox alignment="CENTER" style="-fx-background-color: #ffffff; -fx-background-radius: 6;"
                              VBox.vgrow="ALWAYS">
                            <children>
                                <MFXComboBox fx:id="mealDropdown" prefWidth="350.0" style="-fx-alignment: center;"/>
                            </children>
                        </VBox>
                    </children>
                </VBox>
                <VBox style="-fx-background-color: #D9D9D9; -fx-background-radius: 6;" VBox.vgrow="ALWAYS">
                    <children>
                        <Label text="2.) Select Temperature Type">
                            <font>
                                <Font size="24.0"/>
                            </font>
                            <VBox.margin>
                                <Insets left="10.0"/>
                            </VBox.margin>
                        </Label>
                        <HBox alignment="CENTER" spacing="100.0"
                              style="-fx-background-color: #ffffff; -fx-background-radius: 6;" VBox.vgrow="ALWAYS">
                            <children>
                                <RadioButton fx:id="hot" mnemonicParsing="false" text="Hot">
                                    <font>
                                        <Font size="18.0"/>
                                    </font>
                                    <toggleGroup>
                                        <ToggleGroup fx:id="temp"/>
                                    </toggleGroup>
                                </RadioButton>
                                <RadioButton fx:id="warm" mnemonicParsing="false" text="Warm" toggleGroup="$temp">
                                    <font>
                                        <Font size="18.0"/>
                                    </font>
                                </RadioButton>
                                <RadioButton fx:id="cold" mnemonicParsing="false" text="Cold" toggleGroup="$temp">
                                    <font>
                                        <Font size="18.0"/>
                                    </font>
                                </RadioButton>
                            </children>
                            <padding>
                                <Insets left="20.0" right="20.0"/>
                            </padding>
                        </HBox>
                    </children>
                </VBox>
                <VBox style="-fx-background-color: #D9D9D9; -fx-background-radius: 6;" VBox.vgrow="ALWAYS">
                    <children>
                        <Label text="3.) Select Additional Items">
                            <font>
                                <Font size="24.0"/>
                            </font>
                            <VBox.margin>
                                <Insets left="10.0"/>
                            </VBox.margin>
                        </Label>
                        <HBox alignment="CENTER" spacing="50.0"
                              style="-fx-background-color: #ffffff; -fx-background-radius: 6;" VBox.vgrow="ALWAYS">
                            <children>
                                <CheckBox fx:id="utensils" mnemonicParsing="false" text="Utensils">
                                    <font>
                                        <Font size="18.0"/>
                                    </font>
                                </CheckBox>
                                <CheckBox fx:id="napkins" mnemonicParsing="false" text="Napkins">
                                    <font>
                                        <Font size="18.0"/>
                                    </font>
                                </CheckBox>
                                <CheckBox fx:id="glass" mnemonicParsing="false" text="Glass">
                                    <font>
                                        <Font size="18.0"/>
                                    </font>
                                </CheckBox>
                            </children>
                            <padding>
                                <Insets left="10.0" right="10.0"/>
                            </padding>
                        </HBox>
                    </children>
                </VBox>
                <VBox style="-fx-background-color: #D9D9D9; -fx-background-radius: 6;" VBox.vgrow="ALWAYS">
                    <children>
                        <Label text="4.) Fill in Any Dietary Restrictions">
                            <font>
                                <Font size="24.0"/>
                            </font>
                            <VBox.margin>
                                <Insets left="10.0"/>
                            </VBox.margin>
                        </Label>
                        <VBox alignment="CENTER" style="-fx-background-color: #ffffff; -fx-background-radius: 6;"
                              VBox.vgrow="ALWAYS">
                            <children>
                                <TextField fx:id="dietaryRestrictions" alignment="CENTER"
                                           promptText="Food Allergies, Gluten Free, etc."
                                           style="-fx-background-color: #D9D9D9;">
                                    <VBox.margin>
                                        <Insets/>
                                    </VBox.margin>
                                    <font>
                                        <Font size="18.0"/>
                                    </font>
                                </TextField>
                            </children>
                            <padding>
                                <Insets left="20.0" right="20.0"/>
                            </padding>
                        </VBox>
                    </children>
                </VBox>
            </children>
            <BorderPane.margin>
                <Insets bottom="20.0" top="20.0"/>
            </BorderPane.margin>
        </VBox>
    </center>
    <right>
        <VBox spacing="40.0" BorderPane.alignment="CENTER">
            <children>
                <VBox alignment="TOP_CENTER" spacing="20.0"
                      style="-fx-background-color: #012D5A; -fx-background-radius: 6;" VBox.vgrow="ALWAYS">
                    <opaqueInsets>
                        <Insets/>
                    </opaqueInsets>
                    <children>
                        <Label text="Patient Name" textFill="WHITE">
                            <font>
                                <Font size="24.0"/>
                            </font>
                        </Label>
                        <HBox alignment="CENTER">
                            <children>
                                <TextField alignment="TOP_CENTER" promptText="Enter patient name">
                                    <font>
                                        <Font size="24.0"/>
                                    </font>
                                </TextField>
                            </children>
                        </HBox>
                        <Label alignment="TOP_LEFT" text="Room Number" textFill="WHITE">
                            <font>
                                <Font size="24.0"/>
                            </font>
                        </Label>
                        <HBox alignment="CENTER">
                            <children>
                                <TextField alignment="TOP_CENTER" promptText="Enter room number">
                                    <font>
                                        <Font size="24.0"/>
                                    </font>
                                </TextField>
                            </children>
                        </HBox>
                        <Label text="Additional Notes" textFill="WHITE">
                            <font>
                                <Font size="24.0"/>
                            </font>
                        </Label>
                        <HBox alignment="CENTER">
                            <children>
                                <TextField alignment="CENTER" promptText="Additional Messages">
                                    <font>
                                        <Font size="24.0"/>
                                    </font>
                                </TextField>
                            </children>
                        </HBox>
                    </children>
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                    </padding>
                </VBox>
                <VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #012D5A; -fx-background-radius: 6;"
                      VBox.vgrow="ALWAYS">
                    <opaqueInsets>
                        <Insets/>
                    </opaqueInsets>
                    <children>
                        <HBox alignment="TOP_CENTER" spacing="150.0">
                            <children>
                                <Label text="Total:" textFill="WHITE">
                                    <font>
                                        <Font size="24.0"/>
                                    </font>
                                </Label>
                                <Label text="\$0.00" textFill="WHITE">
                                    <font>
                                        <Font size="24.0"/>
                                    </font>
                                </Label>
                            </children>
                            <VBox.margin>
                                <Insets top="10.0"/>
                            </VBox.margin>
                        </HBox>
                        <Button fx:id="submit" onAction="#submitEntry"
                                style="-fx-background-color: green; -fx-background-radius: 6;" text="Submit"
                                textAlignment="CENTER" textFill="WHITE">
                            <font>
                                <Font size="36.0"/>
                            </font>
                        </Button>
                    </children>
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0"/>
                    </padding>
                </VBox>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
        </VBox>
    </right>
    <left>
        <VBox alignment="CENTER" BorderPane.alignment="CENTER">
            <children>
                <ImageView fitHeight="350.0" fitWidth="350.0" pickOnBounds="true" preserveRatio="true"
                           VBox.vgrow="ALWAYS">
                    <image>
                        <Image url="@../../../../../assets/foodImage.jpg"/>
                    </image>
                </ImageView>
                <VBox alignment="CENTER" style="-fx-background-color: #D9D9D9; -fx-background-radius: 6;">
                    <children>
                        <Label text="Meal Name">
                            <font>
                                <Font size="24.0"/>
                            </font>
                        </Label>
                    </children>
                </VBox>
            </children>
            <BorderPane.margin>
                <Insets/>
            </BorderPane.margin>
            <padding>
                <Insets left="20.0" right="20.0"/>
            </padding>
        </VBox>
    </left>
</BorderPane>
