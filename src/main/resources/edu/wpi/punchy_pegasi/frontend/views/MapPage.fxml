<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>
<?import net.kurobako.gesturefx.GesturePane?>
<BorderPane minHeight="-Infinity" minWidth="-Infinity"
            xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="edu.wpi.punchy_pegasi.frontend.controllers.MapPageController">
   <center>
      <VBox>
         <padding>
            <Insets topRightBottomLeft="20.0"/>
         </padding>
         <VBox VBox.vgrow="ALWAYS"
               style="-fx-border-color: black; -fx-border-style: solid inside; -fx-border-width: 3; -fx-border-radius: 3">
            <GesturePane VBox.vgrow="ALWAYS" fitHeight="false" fitWidth="false" style="-fx-background-color: #D9D9D9"
                         fx:id="gesturePane" maxScale="1.0" minScale="0.1" prefWidth="400" prefHeight="400">
               <StackPane fx:id="maps"/>
            </GesturePane>
         </VBox>
      </VBox>
   </center>
   <top>
      <HBox fx:id="buttonContainer" alignment="CENTER" HBox.hgrow="ALWAYS" spacing="25.0"/>
   </top>
</BorderPane>
