<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.MFXComboBox?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<BorderPane style="-fx-background-color: #f1f1f1;" xmlns="http://javafx.com/javafx/19"
            xmlns:fx="http://javafx.com/fxml/1">
    <center>
        <VBox spacing="30.0">
            <children>
                <VBox alignment="CENTER" style="-fx-background-color: #D9D9D9; -fx-background-radius: 6;"
                      VBox.vgrow="ALWAYS">
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                    <children>
                        <Label text="Flower Service Request">
                            <font>
                                <Font size="36.0"/>
                            </font>
                        </Label>
                    </children>
                </VBox>
                <VBox style="-fx-background-color: #D9D9D9; -fx-background-radius: 6;" VBox.vgrow="ALWAYS">
                    <children>
                        <Label text="1.) Pick Flower Type">
                            <font>
                                <Font size="24.0"/>
                            </font>
                            <VBox.margin>
                                <Insets left="10.0"/>
                            </VBox.margin>
                        </Label>
                        <VBox alignment="CENTER" style="-fx-background-color: #ffffff; -fx-background-radius: 6;"
                              VBox.vgrow="ALWAYS">
                            <children>
                                <MFXComboBox fx:id="flowerTypeComboBox" floatingText="Select Flower Type"
                                             prefWidth="350.0" style="-fx-alignment: center;"/>
                            </children>
                        </VBox>
                    </children>
                </VBox>
                <VBox style="-fx-background-color: #D9D9D9; -fx-background-radius: 6;" VBox.vgrow="ALWAYS">
                    <children>
                        <Label text="2.) Pick Flower Size">
                            <font>
                                <Font size="24.0"/>
                            </font>
                            <VBox.margin>
                                <Insets left="10.0"/>
                            </VBox.margin>
                        </Label>
                        <HBox alignment="CENTER" spacing="50.0"
                              style="-fx-background-color: #ffffff; -fx-background-radius: 6;" VBox.vgrow="ALWAYS">
                            <children>
                                <RadioButton fx:id="small" mnemonicParsing="false" text="Small">
                                    <font>
                                        <Font size="18.0"/>
                                    </font>
                                    <toggleGroup>
                                        <ToggleGroup fx:id="flowerSizeGroup"/>
                                    </toggleGroup>
                                </RadioButton>
                                <RadioButton fx:id="medium" mnemonicParsing="false" text="Medium"
                                             toggleGroup="$flowerSizeGroup">
                                    <font>
                                        <Font size="18.0"/>
                                    </font>
                                </RadioButton>
                                <RadioButton fx:id="large" mnemonicParsing="false" text="Large"
                                             toggleGroup="$flowerSizeGroup">
                                    <font>
                                        <Font size="18.0"/>
                                    </font>
                                </RadioButton>
                            </children>
                            <padding>
                                <Insets left="20.0" right="20.0"/>
                            </padding>
                        </HBox>
                    </children>
                </VBox>
                <VBox style="-fx-background-color: #D9D9D9; -fx-background-radius: 6;" VBox.vgrow="ALWAYS">
                    <children>
                        <Label text="3.) Flower Amount">
                            <font>
                                <Font size="24.0"/>
                            </font>
                            <VBox.margin>
                                <Insets left="10.0"/>
                            </VBox.margin>
                        </Label>
                        <VBox alignment="CENTER" style="-fx-background-color: #ffffff; -fx-background-radius: 6;"
                              VBox.vgrow="ALWAYS">
                            <children>
                                <TextField fx:id="flowerAmountField" alignment="CENTER" promptText="Enter Flower Amount"
                                           style="-fx-background-color: #D9D9D9;">
                                    <VBox.margin>
                                        <Insets/>
                                    </VBox.margin>
                                    <font>
                                        <Font size="18.0"/>
                                    </font>
                                </TextField>
                            </children>
                            <padding>
                                <Insets left="20.0" right="20.0"/>
                            </padding>
                        </VBox>
                    </children>
                </VBox>
            </children>
            <BorderPane.margin>
                <Insets bottom="20.0" top="20.0"/>
            </BorderPane.margin>
        </VBox>
    </center>
    <left>
        <VBox alignment="CENTER" BorderPane.alignment="CENTER">
            <children>
                <ImageView fitHeight="350.0" fitWidth="350.0" pickOnBounds="true" preserveRatio="true"
                           VBox.vgrow="ALWAYS">
                    <image>
                        <Image url="@../../../../../assets/flower-bouquet.png"/>
                    </image>
                </ImageView>
                <VBox alignment="CENTER" style="-fx-background-color: #D9D9D9; -fx-background-radius: 6;">
                    <children>
                        <Label text="Flower Description">
                            <font>
                                <Font size="24.0"/>
                            </font>
                        </Label>
                    </children>
                </VBox>
            </children>
            <BorderPane.margin>
                <Insets/>
            </BorderPane.margin>
            <padding>
                <Insets left="20.0" right="20.0"/>
            </padding>
        </VBox>
    </left>
</BorderPane>