<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
    <center>
    </center>
    <right>
        <VBox spacing="20.0" BorderPane.alignment="CENTER">
            <children>
                <VBox fx:id="inputContainer" alignment="TOP_CENTER" prefWidth="338.0" spacing="20.0" style="-fx-background-color: #012D5A; -fx-background-radius: 6;" VBox.vgrow="ALWAYS">
                    <opaqueInsets>
                        <Insets />
                    </opaqueInsets>
                    <children>
                        <Label alignment="TOP_LEFT" text="Room Number" textFill="WHITE">
                            <font>
                                <Font size="24.0" />
                            </font>
                        </Label>
                        <HBox alignment="CENTER">
                            <children>
                                <TextField fx:id="roomNumber" alignment="TOP_CENTER" onKeyReleased="#validateEntry" promptText="Enter Room Number">
                                    <font>
                                        <Font size="24.0" />
                                    </font>
                                </TextField>
                            </children>
                        </HBox>
                  <Label text="Staff Assignment" textFill="WHITE">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
                  <HBox alignment="CENTER">
                     <children>
                        <TextField fx:id="staffAssignment" alignment="CENTER" onKeyReleased="#validateEntry" promptText="Enter Staff Member">
                           <font>
                              <Font size="24.0" />
                           </font>
                        </TextField>
                     </children>
                  </HBox>
                        <Label text="Additional Notes" textFill="WHITE">
                            <font>
                                <Font size="24.0" />
                            </font>
                        </Label>
                        <HBox alignment="CENTER">
                            <children>
                                <TextField fx:id="additionalNotes" alignment="CENTER" promptText="Additional Notes">
                                    <font>
                                        <Font size="24.0" />
                                    </font>
                                </TextField>
                            </children>
                        </HBox>
                    </children>
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" />
                    </padding>
                </VBox>
                <VBox fx:id="totalContainer" alignment="CENTER" spacing="20.0" style="-fx-background-color: #012D5A; -fx-background-radius: 6;" VBox.vgrow="ALWAYS">
                    <opaqueInsets>
                        <Insets />
                    </opaqueInsets>
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
                    </padding>
               <children>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="50.0">
                     <children>
                        <Button fx:id="clear" onMouseClicked="#clearEntry" style="-fx-background-color: green; -fx-background-radius: 6;" text="Clear" textAlignment="CENTER" textFill="WHITE">
                           <font>
                              <Font size="24.0" />
                           </font>
                        </Button>
                              <Button fx:id="submit" onMouseClicked="#submitEntry" style="-fx-background-color: green; -fx-background-radius: 6;" text="Submit" textAlignment="CENTER" textFill="WHITE">
                                  <font>
                                      <Font size="24.0" />
                                  </font>
                              </Button>
                     </children>
                  </HBox>
               </children>
                </VBox>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </VBox>
    </right>
</BorderPane>
